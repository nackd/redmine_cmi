<h2><%=l('cmi.label_new_checkpoint')%></h2>

<% form_for :cmi_checkpoint, @cmi_checkpoint,
                   :url => { :controller => 'checkpoints', :action => 'create', :project_id => @project },
                   :builder => TabularFormBuilder,
                   :lang => current_language do |f| %>

  <%= error_messages_for 'cmi_checkpoint' %>

  <fieldset class="box tabular">
    <legend><%=t :"cmi.label_initial_schedule" %></legend>
    <p><%= f.text_field :scheduled_start_date, :size => 10, :required => true %><%= calendar_for('cmi_project_info_scheduled_start_date') %></p>
    <p><%= f.text_field :scheduled_finish_date, :size => 10, :required => true %><%= calendar_for('cmi_project_info_scheduled_finish_date') %></p>
    <p><%= f.text_field :scheduled_material_budget, :size => 10, :required => true %></p>
    <p><%= f.text_field :scheduled_qa_meetings, :size => 10, :required => true %></p>
  <%- @roles.each do |role| -%>
    <p>
      <%= label_tag "cmi_project_info_scheduled_role_effort_#{role}",
                    l(:"cmi.label_scheduled_role_effort", :role => role) + '<span class="required"> *</span>' %>
      <%= text_field_tag "cmi_project_info[scheduled_role_effort[#{role}]]", @cmi_project_info.scheduled_role_effort[role], :size => 10 %>
    </p>
  <%- end -%>
  </fieldset>

  <fieldset class="box tabular">
    <legend><%=t :"cmi.label_actual_data" %></legend>
    <p><%= f.text_field :total_income, :size => 10, :required => true %></p>
    <p><%= f.text_field :actual_start_date, :size => 10, :required => true %><%= calendar_for('cmi_project_info_actual_start_date') %></p>
  </fieldset>

  <%= submit_tag(l(:button_save)) %>
<% end %>
