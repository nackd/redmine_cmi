<tr>
  <th rowspan=5><%= l('cmi.label_incidents') %></th>
  <th rowspan="1" colspan="2"><%= l('cmi.label_incidents_high') %></th>
  <% @metrics.each_with_index do |metric, i| -%>
    <% content_tag :td, :id => "incident_high_#{i}", :class => "issue" do -%>
      <%= metric.incident_high %>
    <% end -%>
  <% end -%>
</tr>
<tr>
  <th rowspan=1 colspan="2"><%= l('cmi.label_incidents_medium') %></th>
  <% @metrics.each_with_index do |metric, i| -%>
    <% content_tag :td, :id => "incident_medium_#{i}", :class => "issue" do -%>
      <%= metric.incident_medium %>
    <% end -%>
  <% end -%>
</tr>
<tr>
  <th rowspan=1 colspan="2"><%= l('cmi.label_incidents_low') %></th>
  <% @metrics.each_with_index do |metric, i| -%>
    <% content_tag :td, :id => "incident_low_#{i}", :class => "issue" do -%>
      <%= metric.incident_low %>
    <% end -%>
  <% end -%>
</tr>
<tr>
  <th rowspan=1 colspan="2"><%= l(:label_total) %></th>
  <% @metrics.each_with_index do |metric, i| -%>
    <% content_tag :td, :id => "incident_total_#{i}", :class => "issue" do -%>
      <%= metric.incident_total %>
    <% end -%>
  <% end %>
</tr>
<tr>
  <th colspan="2"><%= l('cmi.label_graphs') %></th>
  <% @metrics.each_with_index do |metric, i| -%>
    <% content_tag :td, :id => "incident_chart_#{i}", :class => "issue" do -%>
      <img src="http://chart.apis.google.com/chart?cht=bhs&chd=t:<%= metric.incident_high %>,<%= metric.incident_medium %>,<%= metric.incident_low %>&chco=4D89F9,C6D9FD&chbh=10,5,10&chs=250x70&chxt=x,y&chxl=0:|0|50|100|1:|Bajo: <%= metric.incident_low %>|Medio: <%= metric.incident_medium %>|Alto: <%= metric.incident_high %>|"/>
    <% end -%>
  <% end -%>
</tr>
